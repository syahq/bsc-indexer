{
  "extends": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "no-commented-out-code": false,
    "variable-name": [
      true,
      "ban-keywords",
      "allow-leading-underscore"
    ],
    "prettier": [
      true,
      {
        "printWidth": 80,
        "singleQuote": true,
        "semi": false
      }
    ]
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts",
      "./**/*.js"
    ]
  }
}